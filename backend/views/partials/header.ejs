<header class="header">
  <div class="logo">
    <img src="/images/logo.png" alt="Game Logo" class="logo-img">
    <h2>Level-Based Coding Game</h2>
  </div>

  <div class="user-info" id="user-section">
    <!-- Will be filled dynamically -->
  </div>
</header>

<script>
  const storedUser = localStorage.getItem('username');
  const userSection = document.getElementById('user-section');

  if (storedUser) {
    userSection.innerHTML = `
      <span id="user-display">Welcome, <span id="username-text">${storedUser}</span> ðŸ‘‹</span>
      <button onclick="logout()" class="logout-btn">Logout</button>
    `;
  } else {
    userSection.innerHTML = `
      <a href="/login" class="auth-link">Login</a> |
      <a href="/signup" class="auth-link">Signup</a>
    `;
  }

  function logout() {
    localStorage.removeItem('username');
    window.location.href = '/login';
  }
</script>

